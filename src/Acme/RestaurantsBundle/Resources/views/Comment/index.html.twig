{# src/Acme/DemoBundle/Resources/views/Comment/index.html.twig #} 
{% for comment in comments %}
    <article class="comment {{ cycle(['odd', 'even'], loop.index0) }}" id="comment-{{ comment.commentId }}">
        <header>
            <p><span class="highlight">{{ comment.commentUser }}</span> commented <time datetime="{{ comment.commentCreated|date('c') }}">{{ comment.commentCreated|date('l, F j, Y') }}</time></p>
        </header>
        <p>{{ comment.commentContent }}</p>
    </article>
{% else %}
    <p>There are no comments for this post. Be the first to comment...</p>
{% endfor %}
