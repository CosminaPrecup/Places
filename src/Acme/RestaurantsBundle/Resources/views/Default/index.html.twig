{# src/Acme/RestaurantsBundle/Resources/views/Default/index.html.twig #}
{% extends 'AcmeRestaurantsBundle::layout.html.twig' %}
{% block body %}
  {% for place in places %}
    
      <article class="places">
         <header>     
            <h2><a href="{{ path('_show',{'id' : place.id}) }}">{{place.placesName}}</a></h2>
         </header>           
         {#{<img src="{{ asset('bundles/AcmeRestaurants/images/food.jpg')}}" />}#}
        
         {%if place.placePhoto !="" %}     
         <img src="{{place.placePhoto}}">     
         {% elseif place.placePhoto <10 %}
         <img src="{{ asset('bundles/AcmeRestaurants/images/food.jpg')}}" />
         {% endif %}
         <div class="snippet">
              <p>{{place.placesAddress}}</p>
              <p class="continue"><a href="{{ path('_show',{'id' : place.id}) }}">Continue reading...</a></p>
         </div>              
         <footer class="meta">
         <p>Comments: -</p>       
         <p>Rating:{{place.placesRating}}</p>
         <p>Tags: <span class="highlight">{{ place.placesTypes }}</span></p>
         </footer>
      </article> 
  {% else %}
     <p>There are no blog entries for places</p>
     
  {% endfor %}
 {% endblock %}